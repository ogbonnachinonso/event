
<%- include('../partials/dash')-%>

<!-- main content -->
<div class="wrapper mt-3">
  
  <div class="row">
    <div class="col-12 col-m-12 col-sm-12">
      <div class="card">
        <div class="card-header">
          <h3>
            Event
          </h3>
          <i class="fas fa-ellipsis-h"></i>
        </div>
        <%- include('../partials/message')-%>
        <div class="card-content ">
          <table class="">
            <thead>
              <tr>
                <th class="table_header">Name</th>
                <th class="table_header">Date</th>
                <th class="table_header">Email</th>
                <th class="table_header">Category</th>
                <th class="table_header">Phone Number</th>
                <th class="table_header"><button type="button" class="btn btn-outline-white btn-rounded btn-sm px-2"><a href="/book"
                      class="fas fa-pencil-alt mt-0"></a>
                    <i></i> </button></th>
              </tr>
            </thead>
            <tbody>
              <% events.forEach((event)=>{%>
              <tr>
                <td><%= event.name %></td>
                <td><%= event.createdAt.toLocaleDateString() %></td>
                <td><%= event.email %></td>
                <td><%= event.category %></td>
                <td><%= event.number %></td>
                <td>
                  
                    <i class="bg-success"></i>
                  <a href="/edit/<%= event.id %>"  style="text-decoration: none; color: #20af1b;" class="btn btn-warning  mt-2">Edit</a>
                
                
                  <form action="/delete/<%= event.id %>" method="POST" id="delete-form">
                    <i class="bg-danger"></i>
                    <button type="submit" class="btn btn-danger ">Delete</button>
                  </form>
                
                </td>
                
              </tr>
              <%})%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    
 
</div>
<!-- end main content -->
<!-- import script -->
<script src="../assets/vendor/jquery/jquery.min.js"></script>
<script src="../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="../assets/vendor/jquery.easing/jquery.easing.min.js"></script>
<script src="../assets/vendor/php-email-form/validate.js"></script>
<script src="../assets/vendor/waypoints/jquery.waypoints.min.js"></script>
<script src="../assets/vendor/counterup/jquery.counterup.min.js"></script>
<script src="../assets/vendor/owl.carousel/owl.carousel.min.js"></script>
<script src="../assets/vendor/typed.js/typed.min.js"></script>
<script src="../assets/vendor/venobox/venobox.min.js"></script>

<script src="../assets/js/main.js"></script>

<script>
  $("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
  });
</script>
<!-- end import script -->
</body>

</html>



