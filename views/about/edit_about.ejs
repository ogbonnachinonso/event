<%- include('../partials/head')-%>
<main class="login-pag  page" id="login" style="background-image: url(../../images/bride_64.jpg)" >

  <div class="container login_page">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="  backgroun">
        <div class="card-bod ">
          <h2 class="mb-4 text-center text ">Edit Bio</h2>
          <%- include('../partials/message')-%>
        
          <form action="/editbio/<%= bio.id %>" method="POST" class="backgroun">
            
            <div class=" form-group" >
              <input required  name="bride" id="bride" class="input_form  form-control" style="width: 100%;"  value="<%= bio.bride %>" >
            </div>

            <div class=" form-group" >
              <input required  name="groom" id="groom" class="input_form  form-control" style="width: 100%;" value="<%= bio.groom %>" >
            </div>

            <div class=" form-group" >
              <input required  name="met" id="met" class="input_form  form-control" style="width: 100%;"  value="<%= bio.met %>" >
            </div>

            <div class="form-group">
              <input required name="brideparents" id="brideparents" class="form-control input_form" style="width: 100%;" placeholder="Enter bride parents Bio here" value="<%= bio.brideparents %>">
            </div>
            <div class="form-group">
              <input required name="groomparents" id="groomparents" class="form-control input_form" style="width: 100%;" placeholder="Enter groom parents bio here" value="<%= bio.groomparents %>">
            </div>
            <div class="form-group">
              <input required name="pastor" id="pastor" class="form-control input_form" style="width: 100%;" placeholder="Enter pastor bio here" value="<%= bio.pastor %>">
            </div>
            <div class="form-group">
              <input required name="maid" id="maid" class="form-control input_form" style="width: 100%;" placeholder="Enter Bio here" value="<%= bio.maid %>">
            </div>
            <div class="form-group">
              <input required name="bestman" id="bestman" class="form-control input_form" style="width: 100%;" placeholder="Enter Bio here" value="<%= bio.bestman %>">
            </div>
            <button class="btn butt btn-block mt-4 mb-5"  type="submit">
              Update</button>
            
          </form>
        </div>
        
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer')-%>