<%- include('../partials/head')-%>
<main class="login-pag  page" id="login" style="background-image: url(../../images/bride_64.jpg)" >

  <div class="container login_page">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="  backgroun">
        <div class="card-bod ">
          <h2 class="mb-4 text-center text ">Create Bio</h2>
          <%- include('../partials/message')-%>
        
          <form action="/addbio" method="POST" class="backgroun">
            
            <div class=" form-group" >
              <textarea required  name="bride" id="bride" class="input_form  form-control" style="width: 100%;" placeholder="Enter Bride Bio here" value="<%= typeof bride != 'undefined' ? bride : '' %>" ></textarea>
            </div>

            <div class=" form-group" >
              <textarea required  name="groom" id="groom" class="input_form  form-control" style="width: 100%;" placeholder="Enter Groom Bio here" value="<%= typeof groom != 'undefined' ? groom : '' %>" ></textarea>
            </div>

            <div class=" form-group" >
              <textarea required  name="met" id="met" class="input_form  form-control" style="width: 100%;" placeholder="Enter How we met here" value="<%= typeof met != 'undefined' ? met : '' %>" ></textarea>
            </div>

            <div class="form-group">
              <input required name="brideparents" id="brideparents" class="form-control input_form" style="width: 100%;" placeholder="Enter bride parents Bio here" value="<%= typeof brideparents != 'undefined' ? brideparents : '' %>">
            </div>
            <div class="form-group">
              <input required name="groomparents" id="groomparents" class="form-control input_form" style="width: 100%;" placeholder="Enter groom parents bio here" value="<%= typeof groomparents != 'undefined' ? groomparents : '' %>">
            </div>
            <div class="form-group">
              <input required name="pastor" id="pastor" class="form-control input_form" style="width: 100%;" placeholder="Enter pastor bio here" value="<%= typeof pastor != 'undefined' ? pastor : '' %>">
            </div>
            <div class="form-group">
              <input required name="maid" id="maid" class="form-control input_form" style="width: 100%;" placeholder="Enter Bio here" value="<%= typeof maid != 'undefined' ? maid : '' %>">
            </div>
            <div class="form-group">
              <input required name="bestman" id="bestman" class="form-control input_form" style="width: 100%;" placeholder="Enter Bio here" value="<%= typeof bestman != 'undefined' ? bestman : '' %>">
            </div>
            <button class="btn butt btn-block mt-4 mb-5"  type="submit">
              Save</button>
            
          </form>
        </div>
        
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer')-%>