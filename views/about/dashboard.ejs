<%- include('../partials/dash')-%>

<!-- main content -->
<div class="wrapper mt-3">

  <div class="row">
    <div class="col-12 col-m-12 col-sm-12">
      <div class="card">
        <div class="card-header">
          <h3>
            MY BIO
          </h3>
          <i class="fas fa-ellipsis-h"></i>
        </div>
        <%- include('../partials/message')-%>
        <div class="card-content">
          <table>
            <thead>
              <tr>
                <th class="table_header">Bride</th>
                <th class="table_header">Groom</th>
                <th class="table_header">How we Met</th>
                <th class="table_header">Parents</th>
                <th class="table_header">Pastor</th>
                <th class="table_header">Bestman</th>
                <th class="table_header">Date</th>
                <th class="table_header"><button type="button" class="btn btn-outline-danger btn-rounded btn-sm px-2"><a href="/addbio"
                      class="fas fa-pencil-alt mt-0"></a>
                    <i></i> </button></th>
              </tr>
            </thead>
            <tbody>
              <% bios.forEach((bio)=>{%>
              <tr>
                <td><%= bio.bride %></td>
                <td><%= bio.groom %></td>
                <td><%= bio.met %></td>
                <td><%= bio.parents %></td>
                <td><%= bio.pastor %></td>
                <td><%= bio.bestman %></td>
                <td><%= bio.createdAt.toLocaleDateString() %></td>
                <td>
                  <i class="bg-success"></i>
                  <a href="/editbio/<%= bio.id %>" style="text-decoration: none; color: #FFF;"
                    class="btn btn-success  mt-2">Edit</a>

                  <form action="/deletebio/<%= bio.id %>" method="POST" id="delete-form">

                    <i class="bg-danger"></i>
                    <button type="submit" class="btn btn-danger ">Delete</button>
                  </form>
                </td>
              </tr>
              <%})%>
            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</div>
<!-- end main content -->

<script src="../assets/vendor/jquery/jquery.min.js"></script>
<script src="../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="../assets/vendor/jquery.easing/jquery.easing.min.js"></script>
<script src="../assets/vendor/php-email-form/validate.js"></script>
<script src="../assets/vendor/waypoints/jquery.waypoints.min.js"></script>
<script src="../assets/vendor/counterup/jquery.counterup.min.js"></script>
<script src="../assets/vendor/owl.carousel/owl.carousel.min.js"></script>
<script src="../assets/vendor/typed.js/typed.min.js"></script>
<script src="../assets/vendor/venobox/venobox.min.js"></script>

<script src="../assets/js/main.js"></script>

<script>
  $("#menu-toggle").click(function (e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
  });
</script>
<!-- end import script -->
</body>

</html>
